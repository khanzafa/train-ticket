    <div class="booking">
      <h1 class="booking-title">Train Ticket Booking</h1>
      <form class="booking-form" action="booking" method="POST">
        <div class="form-group">
          <label for="from">From:</label>
          <input type="text" id="from" name="from" placeholder="Enter source station">
        </div>
        <div class="form-group">
          <label for="to">To:</label>
          <input type="text" id="to" name="to" placeholder="Enter destination station">
        </div>
        <div class="form-group">
          <label for="date">Date:</label>
          <input type="date" id="date" name="date">
        </div>
        <div class="form-group">
          <button type="submit">Book Now</button>
        </div>
      </form>
