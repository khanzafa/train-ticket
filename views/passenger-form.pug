        span.bar
      .form-page        
        .content-form
            .form-passenger
                form.data-passenger(action='checkout' method='post')
                    .detail-passenger
                        .title-form
                        .icon-people
                            i.fa-solid.fa-user
                        h1 Passenger Details            
                        - for (var num = 1; num <= passenger; num++)
                            .head-form Passenger #{num}
                            .form-input.fullname
                            .field
                                input#fullname(type='text', name='fullname' + num, autocomplete='off' placeholder='Full Name')                
                            .form-input.title
                            .field
                                input#title.dropdown-input(type='text' name='title' + num, autocomplete='off' placeholder='Title')
                                .dropdown-list
                                    .dropdown-item(name='title' + num, data-value='Mr') Mr
                                    .dropdown-item(name='title' + num, data-value='Mrs') Mrs
                                    .dropdown-item(name='title' + num, data-value='Ms') Ms                
                                i.fa-solid.fa-chevron-down
                            .form-input.type-id
                            .field
                                input#type-id.input(type='text' name='type_id' + num, autocomplete='off' placeholder='Identity')
                                .list
                                    .item(name='type_id' + num, value='ID') ID
                                    .item(name='type_id' + num, value='Paspor') Paspor                
                                i.fa-solid.fa-chevron-down
                            .form-input.identity
                            .field
                                input#identity(name='passenger_id' + num, type='number', autocomplete='off' placeholder='Identity Number')                
                            .form-input.phone
                            .field
                                input#number-phone(type='text', name='phone_number' + num, autocomplete='off' placeholder='Mobile Number')                
                            .form-input.email
                            .field
                                input#email(type='email', name='email' + num, autocomplete='off' placeholder='Email')              
                            .form-input                      
                    .notice-order
                        h3 Conditions for Reserving Train Tickets
                        .notice-list
                            ul
                                li 1. Reservations can be made 3 hours before the train departs.
                                li 2. Prices and seat availability are subject to change.
                                li 3. PT. Train Venture to be exchanged for boarding passes at online stations.
                        .check-agreed
                            input#notice-check(type='checkbox')
                        label(for='notice-check')
                            | By clicking the button, you have agreed to PT. Train Venture 
                            span Terms &amp; Conditions
                            | .
                        .submit-data                            
                          input(type="hidden" name="go_ticket_id" value=go_ticket.ticket_id)
                          input(type="hidden" name="return_ticket_id" value=return_ticket.ticket_id)
                          input(type="hidden" name="passenger" value=passenger)                                                                                        
                          button#submit(type='submit') CHECK OUT
        .summary-ticket
            .summary-trip
                .schedule-trip
                    .trip-head
                    h2 Train
                    .trip-content.depart
                    img.trip-icon.list-horizontal(src='/train-ticket/public/images/Icon.ico', alt='')
                    .jorney-trip
                        .station-trip
                        .stasion-name.list-horizontal #{ticket.departure_station}
                        .journey-icon.list-horizontal
                            i.fa-solid.fa-arrow-right
                        .stasion-name.list-horizontal #{ticket.arrival_station}
                        .detail-trip
                        .class-train.list-horizontal #{train.class}
                        .list-horizontal
                            .icon-line
                        .time-trip.list-horizontal #{ticket.departure_time}
                        .list-horizontal
                            .icon-line
                        .date-trip.list-horizontal #{ticket.departure_date}
                .price-summary
                    .sum-detail
                    .trip-head
                        h2 Price
                    .detail-sum.depart
                        .head-sum Departure
                        .sub-sum
                        .ket-sum Passenger(x#{passenger})
                        .price-sum IDR #{ticket.price * passenger}
                        .sub-sum
                        .ket-sum Service Fee
                        .price-sum Free
                .total-payment
                    .sub-sum
                    .ket-sum Total Payment
                    .price-sum IDR #{ticket.price * passenger}
